                        android:layout_height="@dimen/home_screen_grid_item_icon_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_home_featured" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/home_screen_grid_item_text_margin"
                        android:singleLine="true"
                        android:text="@string/lbl_navigation_item_featured"
                        android:textAllCaps="true"
                        android:textColor="@color/home_screen_text_color"
                        android:textSize="@dimen/home_screen_grid_item_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
