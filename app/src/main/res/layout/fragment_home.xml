            android:layout_height="wrap_content">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:visibility="visible" />

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="16.0dip"
                app:selected_color="#ff42a5f5"
                app:selected_height="10.0dip"
                app:selected_padding_left="3.0dip"
                app:selected_padding_right="3.0dip"
                app:selected_width="10.0dip"
                app:shape="oval"
                app:unselected_color="#ffffffff"
                app:unselected_height="5.0dip"
                app:unselected_padding_left="3.0dip"
                app:unselected_padding_right="3.0dip"
                app:unselected_width="5.0dip" />
        </RelativeLayout>

